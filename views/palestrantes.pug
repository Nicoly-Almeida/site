.row
    p.titulo PALESTRANTES
    div#palestrantes-lista
      
        each atividade in content.programacao
          if(atividade.palestrante)
            a(href="")
              - foto = "/img/palestrantes/" + atividade.foto
              p.palestrante
                img.palestrante-foto(src=foto)
                .saber-mais SABER MAIS
                palestrante-nome=atividade.palestrante
          if(atividade.oficinas)
            each oficina in atividade.oficinas
              a(href="")
                - foto = "/img/palestrantes/" + oficina.foto
                p.palestrante
                  img.palestrante-foto(src=foto)
                  .saber-mais SABER MAIS
                  span.palestrante-nome=oficina.palestrante
          if(atividade.mesa-redonda)
              each oficina in atividade.mesa-redonda
                a(href="")
                  - foto = "/img/palestrantes/" + mesa-redonda.foto
                  p.palestrante
                    img.palestrante-foto(src=foto)
                    .saber-mais SABER MAIS
                    span.palestrante-nome=mesa-redonda.participante





    
